<form action="/user/edit?user_id={{user._id}}" method="post" enctype="multipart/form-data">

<br />
  <label for="email">E-mail</label>
  <input type="email" name="email" value="{{user.email}}" />


  <br />
  <label for="password">Password</label>
  <input type="password" name="password" value="{{user.password}}" required />


  <br />
  <label for="repeatPassword">Repeat password</label>
  <input type="password" name="repeatPassword" required />


  <br />
  <label for="fullname">Full name</label>
  <input type="text" name="fullname" value="{{user.fullname}}" />

  <br />
  <label for="description">Description</label>
  <input type="text" name="description" value="{{user.description}}" />

  <br />
  <label for="birthdate">Birthdate</label>
  <input type="date" name="birthdate" value="{{user.birthdate}}" />


  <br />
  <div class="genero">
    <label for="radio" required>Gender:</label>

    <label for="male">Male</label><br>
    <input type="radio" id="male" name="gender" value="male">

    <label for="female">Female</label><br>
    <input type="radio" id="female" name="gender" value="female">

    <label for="other">Other</label>
    <input type="radio" id="other" name="gender" value="other">

    </div>
    
    {{!-- <label for="photo">Attach a nice picture ;)</label> --}}
    <input type="file" name="photo"  value="{{user.imgPath}}"/>

  <button type="submit">EDIT</button>
</form>